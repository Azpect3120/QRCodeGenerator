    <div class="flex flex-wrap">
      <div class="max-w-sm p-8">
        <div class="bg-gray-200 p-6 rounded-lg shadow-md shadow-black">
          <img class="h-full rounded w-full object-fill object-center mb-6" src="<%- data.src %>" alt="content">
          <form action="/download" method="GET"> 
             <input type="hidden" name="source" id="source" value="<%- data.src %>">
            <button type="submit" class="tracking-widest text-indigo-500 text-xs font-medium title-font">DOWNLOAD</button>
          </form>
          <h2 class="w-full text-lg text-gray-900 font-medium title-font mb-4 text-ellipsis overflow-hidden whitespace-nowrap"> <%- data.data || "No source found" %> </h2>
        </div>
      </div>
    </div>